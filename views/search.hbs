<div class="row search-form-container">
    <div class="col-12 search-form">
        <form action="#" class="js-search-form" aria-label="search-form">
            <input type="text" class="js-user-input" placeholder="Search for a movie or show" aria-label="search-movie-or-tv-show-input"
                required>
            <button type="submit" class="js-search-btn">
                <i class="fa fa-search"></i>
            </button>
        </form>
    </div>
    <div class="js-no-movie-results">
        <div class="col-12">
            <h2 class="center-block">No movies were found!</h2>
        </div>
    </div>
    <div class="js-no-tv-results">
        <div class="col-12">
            <h2 class="center-block">No TV shows were found!</h2>
        </div>
    </div>
</div>

<main role="main" aria-live="assertive">
    <div class="js-search-results"></div>
</main>

<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="../api.js" type="text/javascript"></script>
